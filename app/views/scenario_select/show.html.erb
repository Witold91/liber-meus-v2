<% content_for :title, t("app.titles.scenario_select", app_name: t("app.name")) %>

<% content_for :head do %>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=Playfair+Display:ital,wght@0,700;1,400&family=Lora:ital,wght@0,400;1,400&display=swap" rel="stylesheet">
<% end %>

<style>
  .scenario-header {
    padding: 2.5rem 0 1.5rem;
    border-bottom: 1px solid #2a2318;
    margin-bottom: 2rem;
  }

  .scenario-header h1 {
    font-family: 'Cinzel', 'Palatino Linotype', serif;
    font-size: 1.9rem;
    font-weight: 400;
    letter-spacing: 0.18em;
    color: #e0d4bc;
  }

  .scenario-header p {
    font-family: 'Lora', Georgia, serif;
    font-style: italic;
    color: #5a4e3a;
    font-size: 0.88rem;
    margin-top: 0.5rem;
    letter-spacing: 0.02em;
  }

  .scenario-grid { display: grid; gap: 1rem; }

  .scenario-card {
    border: 1px solid #2a2318;
    padding: 1.5rem;
    background: #111008;
  }

  .scenario-card h2 {
    font-family: 'Playfair Display', 'Palatino Linotype', Georgia, serif;
    font-size: 1.4rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    letter-spacing: 0.01em;
  }

  .scenario-card > p {
    font-family: 'Lora', Georgia, serif;
    font-style: italic;
    color: #6a5c48;
    font-size: 0.86rem;
    line-height: 1.65;
    margin-bottom: 1.1rem;
  }

  .scenario-form {
    display: flex;
    gap: 1rem;
    align-items: center;
    flex-wrap: wrap;
    padding-top: 0.75rem;
    border-top: 1px solid #1e1810;
  }

  .scenario-form label {
    font-family: 'Cinzel', serif;
    font-size: 0.58rem;
    letter-spacing: 0.2em;
    color: #4a3e2c;
    text-transform: uppercase;
  }

  .scenario-form select {
    background: #0d0b07;
    color: #8a7a60;
    border: 1px solid #2a2318;
    padding: 0.3rem 0.5rem;
    font-family: 'Lora', Georgia, serif;
    font-style: italic;
    font-size: 0.82rem;
  }

  .empty-state {
    font-family: 'Lora', Georgia, serif;
    font-style: italic;
    color: #3a3020;
    text-align: center;
    padding: 3rem;
  }
</style>

<div class="scenario-header">
  <h1><%= t("views.scenario_select.heading") %></h1>
  <p><%= t("views.scenario_select.subtitle") %></p>
</div>

<% if @scenarios.empty? %>
  <div class="empty-state"><%= t("views.scenario_select.empty_state") %></div>
<% else %>
  <div class="scenario-grid">
    <% @scenarios.each do |scenario| %>
      <div class="scenario-card">
        <h2 style="color: <%= scenario.dig('theme', 'accent_color') || '#8ab4a0' %>;"><%= scenario["title"] %></h2>
        <p><%= scenario["description"] %></p>
        <%= form_with url: scenario_select_path, method: :post do |f| %>
          <%= f.hidden_field :scenario_slug, value: scenario["slug"] %>
          <div class="scenario-form">
            <div>
              <%= f.label :game_language, t("views.scenario_select.language_label") %>
              <%= f.select :game_language, I18n.available_locales.map { |locale| [t("languages.#{locale}"), locale] }, { selected: I18n.locale } %>
            </div>
            <%= f.submit t("views.scenario_select.begin"), class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
