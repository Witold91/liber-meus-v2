<% content_for :title, t("app.name") %>

<style>
  .signin-screen {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }
  .signin-box {
    border: 1px solid #2a2318;
    background: #0f0d09;
    padding: 2.5rem 3rem;
    max-width: 380px;
    width: 100%;
    text-align: center;
  }
  .signin-title {
    font-family: 'Cinzel', 'Palatino Linotype', serif;
    font-size: 1.5rem;
    font-weight: 400;
    letter-spacing: 0.18em;
    color: var(--theme-accent);
    margin-bottom: 0.4rem;
  }
  .signin-subtitle {
    font-family: 'Lora', Georgia, serif;
    font-style: italic;
    font-size: 0.82rem;
    color: #4a4030;
    margin-bottom: 2rem;
  }
  .signin-divider {
    border: none;
    border-top: 1px solid #2a2318;
    margin: 1.75rem 0;
  }
  .google-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    background: transparent;
    border: 1px solid #3a3020;
    color: #b0a890;
    padding: 0.55rem 1.2rem;
    cursor: pointer;
    font-family: 'Cinzel', serif;
    font-size: 0.72rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    width: 100%;
    justify-content: center;
    transition: border-color 0.2s, color 0.2s;
  }
  .google-btn:hover {
    border-color: var(--theme-accent);
    color: var(--theme-accent);
  }
  .google-btn svg { flex-shrink: 0; }
  /* Override container padding for this page */
  body > .container { padding: 0; max-width: 100%; }
</style>

<div class="signin-screen">
  <div class="signin-box">
    <div class="signin-title"><%= t("app.name") %></div>
    <div class="signin-subtitle"><%= t("views.sessions.new.tagline", default: "Interactive fiction awaits") %></div>
    <hr class="signin-divider">
    <%= button_to "/auth/google_oauth2", method: :post, class: "google-btn", form: { data: { turbo: false } } do %>
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
        <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
        <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l3.66-2.84z" fill="#FBBC05"/>
        <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
      </svg>
      <%= t("views.sessions.new.sign_in_google", default: "Sign in with Google") %>
    <% end %>
  </div>
</div>
